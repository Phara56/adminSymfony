{% extends 'base.html.twig' %}

{% block body %}
    {% if role == "ROLE_SUPER_ADMIN" %}
        <div class="text-center m-2 btnAddH">
            <a href="{{ path('admin_users') }}" class="btn btn-primary">Gestion des utiliasteurs</a>
        </div>
    {% endif %}

    {#<div class="container">#}
    <div class="text-center" style="padding-left:260px;">
        <h2 class="text-center">Visualisation chambre</h2>
    </div>
    <div class="container" style="padding-left:260px;">
        <div class="row">
            <div class="col-6">
                <h4>Informations sur la chambre :</h4>
                <li><b>Nom de la chambre :</b> {{ chambre.nom }}</li>
                <li><b>Prix à la nuit :</b> {{ chambre.prix }}</li>
                <li><b>Nombre de M² :</b> {{ chambre.nbmcarre }}</li>
                <li><b>Nombre de pièce :</b> {{ chambre.nbpiece }}</li>
                <li><b>Nombre de salle de bain :</b> {{ chambre.nbsdb }}</li>
                <li><b>Nombre de chambre :</b> {{ chambre.nbchambre }}</li>
                <li><b>Nombre de lit seul :</b> {{ chambre.nblitsolo }}</li>
                <li><b>Nombre de lit double :</b> {{ chambre.nblitdouble }}</li>
            </div>
            <div class="col-6">
                <h4>Equipement de la chambre :</h4>
                {% if chambre.animal == false %}
                    <li><b>Animal :</b> Non</li>
                {% else %}
                    <li><b>Animal :</b> Oui</li>
                {% endif %}
                {% if chambre.douche == false %}
                    <li><b>Douche :</b> Non</li>
                {% else %}
                    <li><b>Douche :</b> Oui</li>
                {% endif %}
                {% if chambre.baignoire == false %}
                    <li><b>Baignoire :</b> Non</li>
                {% else %}
                    <li><b>Baignoire :</b> Oui</li>
                {% endif %}
                {% if chambre.tv == false %}
                    <li><b>Télévision :</b> Non</li>
                {% else %}
                    <li><b>Télévision :</b> Oui</li>
                {% endif %}
                {% if chambre.wifi == false %}
                    <li><b>WiFi :</b> Non</li>
                {% else %}
                    <li><b>WiFi :</b> Oui</li>
                {% endif %}
                {% if chambre.telephone == false %}
                    <li><b>Téléphone :</b> Non</li>
                {% else %}
                    <li><b>Téléphone :</b> Oui</li>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="container" style="padding-left:260px;margin-bottom:30px;">
        <div class="row">
            <div class="col-auto m-auto">
                <h4>Images : </h4>
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% if chambre.image1 != '' %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        {% endif %}
                        {% if chambre.image2 != '' %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        {% endif %}
                        {% if chambre.image3 != '' %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        {% endif %}
                        {% if chambre.image4 != '' %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        {% endif %}
                        {% if chambre.image5 != '' %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        {% endif %}
                    </ol>
                    <div class="carousel-inner">
                        {% if chambre.image1 != '' %}
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="width:500px!important;height:500px!important;" src="{{ asset('/upload/image/chambre/' ~ chambre.image1) }}" alt="First slide">
                        </div>
                        {% endif %}
                        {% if chambre.image2 != '' %}
                            <div class="carousel-item">
                                <img class="d-block w-100" style="width:500px!important;height:500px!important;" src="{{ asset('/upload/image/chambre/' ~ chambre.image2) }}" alt="Second slide">
                            </div>
                        {% endif %}
                        {% if chambre.image3 != '' %}
                            <div class="carousel-item">
                                <img class="d-block w-100" style="width:500px!important;height:500px!important;" src="{{ asset('/upload/image/chambre/' ~ chambre.image3) }}" alt="Third slide">
                            </div>
                        {% endif %}
                        {% if chambre.image4 != '' %}
                            <div class="carousel-item">
                                <img class="d-block w-100" style="width:500px!important;height:500px!important;" src="{{ asset('/upload/image/chambre/' ~ chambre.image4) }}" alt="4th slide">
                            </div>
                        {% endif %}
                        {% if chambre.image5 != '' %}
                            <div class="carousel-item">
                                <img class="d-block w-100" style="width:500px!important;height:500px!important;" src="{{ asset('/upload/image/chambre/' ~ chambre.image5) }}" alt="5th slide">
                            </div>
                        {% endif %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}